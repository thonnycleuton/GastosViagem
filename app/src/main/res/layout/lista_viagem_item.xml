<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="5dip"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/viagemIcon"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/work_small"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtNomeDestino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dip"
        android:layout_centerVertical="true"
        android:paddingBottom ="10dip"
        android:textColor="#040404"
        android:textSize="25dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/txtItemData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNomeDestino"
        android:layout_alignStart="@+id/txtNomeDestino"
        android:paddingTop="5dip"
        android:layout_centerHorizontal="true"
        android:textColor="#343434"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/txtTotalGastos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="Destino"
        android:layout_weight="1"
        android:layout_marginTop="25dp"
        android:textColor="#000000" />

</RelativeLayout>
